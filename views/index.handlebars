<div id="header">
    <h1>Burger Logger</h1>
    <img src="../public/assets/css/burger_style.css" alt="burger">
</div>

<h2>Burgers not yet devoured</h2>

<ul>
    {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
    {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured:</label>
        <br>
        <input type="radio" name="not-devoured" value="0" checked>Not devoured
        <br>
        <input type="radio" name="devoured" value="1">Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>